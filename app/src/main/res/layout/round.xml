<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".SettingsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/playersLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- PLAYERS -->
        </LinearLayout>

        <LinearLayout
            android:id="@+id/guessLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- GUESS PICKERS -->
        </LinearLayout>

        <Space
            android:id="@+id/fabSpace"
            android:layout_width="match_parent"
            android:layout_height="108dp" />

        <LinearLayout
            android:id="@+id/wonLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- WON PICKERS -->
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="108dp"
        android:layout_height="108dp"
        app:layout_anchor="@id/fabSpace"
        app:layout_anchorGravity="center" >

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/rikikiButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:onClick="startRound"
            android:src="@drawable/ic_rikiki" />
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>
